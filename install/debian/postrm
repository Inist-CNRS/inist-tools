#!/usr/bin/env bash
################################################################################
#
# INIST-TOOLS INSTALLATION : POST-DÉSINSTALLATION
#
################################################################################

# ------------------------------------------------------------------------------
# Variables globales
# ------------------------------------------------------------------------------
USER=$(logname)
USERDIR="/home/$USER"

# ------------------------------------------------------------------------------
# Suppression de l'intégration dans le .bashrc
# ------------------------------------------------------------------------------
grep -vi "# INIST-TOOLS" "$USERDIR/.bashrc" > /run/shm/bashrc.tmp
mv /run/shm/bashrc.tmp "$USERDIR/.bashrc"
